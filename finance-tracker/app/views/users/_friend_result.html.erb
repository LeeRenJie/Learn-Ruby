<div class="results-block">
  <%= render 'layouts/messages' %>
</div>

<% if @friends %>
  <div class="card card-header results-block">
    <table class="col-md-12">
      <tbody>
        <% @friends.each do |friend| %>
          <tr>
            <td>
              <strong>Name: </strong> <%= friend.full_name %>
            </td>
            <td>
              <strong class="ml-3">Email: </strong> <%= friend.email %>
            </td>
            <td>
              <%= link_to "View Profile", user_path(friend), class: "btn btn-sm btn-success ml-3" %>
              <% if current_user.not_friends_with?(friend.id) %>
                <%= link_to 'Follow Friend', friendships_path(friend: friend), class: "btn btn-sm btn-success", method: :post %>
              <% else %>
                <span class="badge badge-secondary">
                  You are already friends
                </span>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>
